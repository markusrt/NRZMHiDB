@using HaemophilusWeb.Models
@using HaemophilusWeb.Utils
@model HaemophilusWeb.Models.Change

@{
    ViewBag.Subtitle = "Änderung vom " + Model.Date.ToReportFormat();
}
<p>
    <h2>
        @if (Model.Type == ChangeType.Bug)
        {
            <span class="badge badge-danger">Fehlerbehebung</span>
        }
        else if (Model.Type == ChangeType.Feature)
        {
            <span class="badge badge-info">Neue Funktion</span>
        }
        else if (Model.Type == ChangeType.Design)
        {
            <span class="badge badge-success">Design</span>
        }
    </h2>
</p>
<p>
    @Html.Raw(Model.Details.Replace("~/", Url.Content("~/")))
</p>