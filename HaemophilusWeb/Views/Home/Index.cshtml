@{
    ViewBag.Title = "Haemophilus Web";
    ViewBag.Subtitle = "Webanwendung zur Verwaltung von Haemophilus Influenzae Isolaten";
}

<div class="row">
    <div class="col-md-3 col-sm-6 col-xs-12">
        <h3>Einsender</h3>
        <p>
            Suchen, anlegen und bearbeiten von Einsendern.
        </p>
        <p>
            @Html.ActionLink("Alle Einsender anzeigen", "Index", "Sender", null, new { @class = "btn btn-default btn-block" })
        </p>
        <p>
            @Html.ActionLink("Neuen Einsender anlegen", "Create", "Sender", null, new { @class = "btn btn-primary btn-block" })
        </p>
    </div>
    <div class="col-md-3 col-sm-6 col-xs-12">
        <h3>Patienten</h3>
        <p>
            Suchen, anlegen und bearbeiten von Patienten.
        </p>
        <p>
            @Html.ActionLink("Alle Patienten anzeigen", "Index", "Patient", null, new { @class = "btn btn-default btn-block" })
        </p>
        <p>
            @Html.ActionLink("Neuen Patient anlegen", "Create", "Patient", null, new { @class = "btn btn-primary btn-block" })
        </p>
    </div>
</div>