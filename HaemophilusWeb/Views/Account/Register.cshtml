@using HaemophilusWeb.Models
@using HaemophilusWeb.Views.Utils
@using Microsoft.AspNet.Identity.EntityFramework
@model HaemophilusWeb.Models.RegisterViewModel
@{
    ViewBag.Title = "Neuen Benutzer registrieren";
}

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Bitte legen Sie einen neuen Benutzer an:</h4>
    <hr />
    @Html.ValidationSummary()
    <div class="form-group row">
        @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 col-form-label" })
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 col-form-label" })
        <div class="col-md-4">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 col-form-label" })
        <div class="col-md-4">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(m => m.RoleName, new { @class = "col-md-2 col-form-label" })
        <div class="col-md-4">
            @Html.DropDownListFor(model => model.RoleName, ((SelectList)ViewBag.Roles), "Auswählen...", new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group row">
        <div class="offset-md-2 col-md-10">
            <input type="submit" class="btn btn-primary" value="Neuen Benutzer anlegen" />
        </div>
    </div>
}